<Window x:Class="i18n.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ComboBox x:Name="cbLang" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="127,105,0,0" VerticalAlignment="Top" Width="168" Loaded="cbLang_Loaded" Height="35" FontSize="18"/>
        <Button x:Name="btnChangeLang" Content="{DynamicResource OK}" HorizontalAlignment="Left" Margin="127,206,0,0" VerticalAlignment="Top" Width="94" RenderTransformOrigin="0.679,3.205" Click="btnChangeLang_Click" Height="35" FontSize="15"/>
        <Button x:Name="btnCancel" Content="{DynamicResource Cancel}" HorizontalAlignment="Left" Margin="298,206,0,0" VerticalAlignment="Top" Width="94" Click="btnCancel_Click" Height="35" FontSize="15"/>

    </Grid>
</Window>
